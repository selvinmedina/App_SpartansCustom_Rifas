@model App_SpartansCustom_Rifas.Models.tbDepartamentos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- VISTA NORMAL -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-20">
                <div class="card-body">
                    @Html.ActionLink("Regresar", "Index", null, new { htmlAttributes = new { @class="btn btn-primary btn-sm waves-effect waves-light pull-right" } })
                    <h3>Crear Departamentos</h3>
                </div>
               @using (Html.BeginForm(null, null, FormMethod.Post, new { htmlAttributes = new { id = "frmCrearDepartamentos" } }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.depto_Id, new { htmlAttributes = new { @value = 1 } })
                        <div class="form-group">
                            @Html.LabelFor(model => model.depto_Descripcion, new { htmlAttributes = new { @class = "control-label" } }) <br />
                            @Html.EditorFor(model => model.depto_Descripcion, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = true } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.depto_CodigoDepartamento, new { htmlAttributes = new { @class = "control-label" } }) <br />
                            <input id="depto_CodigoDepartamento" type="text" value="55" name="depto_CodigoDepartamento" data-bts-min="0" data-bts-max="100" data-bts-init-val="" data-bts-step="1" data-bts-decimal="0" data-bts-step-interval="100" data-bts-force-step-divisibility="round" data-bts-step-interval-delay="500" data-bts-prefix="" data-bts-postfix="" data-bts-prefix-extra-class="" data-bts-postfix-extra-class="" data-bts-booster="true" data-bts-boostat="10" data-bts-max-boosted-step="false" data-bts-mousewheel="true" data-bts-button-down-class="btn btn-default" data-bts-button-up-class="btn btn-default" />
                        </div>
                        <div class="form-group" id="FormCrear">
                            @Html.LabelFor(model => model.pais_Id, new { htmlAttributes = new { @class = "control-label" } })
                            <select id="pais_Id" name="pais_Id" class="form-control select2">
                                <option>Seleccione una opcion...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.depto_EsActivo, new { htmlAttributes = new { @class = "control-label" } }) <br />
                            @Html.EditorFor(model => model.depto_EsActivo, new { htmlAttributes = new { @type = "checkbox", @id="switch4", @switch="info", @checked = true } })
                            <label for="switch4" data-on-label="Si" data-off-label="No"></label>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Guardar", "Create", "Departamentos", new { htmlAttributes = new { @class="btn btn-primary waves-effect waves-light" } })
                                @Html.ActionLink("Cancelar", "Index", null, new { htmlAttributes = new { @class="btn btn-danger waves-effect waves-light"} })
                            </div>
                        </div>
                  </div>
                }
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function(){
        //INICIALIZAR LA ESCUCHA DE VALIDACIONES DENTRO DEL FORMULARIO
        $('form').parsley();

        // INICIALIZAR EL PLUGIN DE SELECT2
        $(".select2").select2(
            {
                dropdownParent: $('#FormCrear'),
                placeholder: 'Seleccione un empleado',
                language: {
                    noResults: function () {
                        return 'Resultados no encontrados.';
                    },
                    searching: function () {
                        return 'Buscando...';
                    }
                }
            }
        );

        //INICIALIZAR EL ESTILO DE LOS BOTONES PARA LOS CAMPOS DE TIPO NUMBER
        $('.demo0').TouchSpin({
            buttondown_class: 'btn btn-primary',
            buttonup_class: 'btn btn-primary'
        });

        //INICIALIZAR EL DATEPICKER
        jQuery('.datepicker-autoclose').datepicker({
            autoclose: true,
            todayHighlight: true
        });
    });
</script>


