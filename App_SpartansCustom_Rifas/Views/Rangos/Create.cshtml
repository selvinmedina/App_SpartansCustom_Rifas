@model App_SpartansCustom_Rifas.Models.tbRangos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- VISTA NORMAL -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-20">
                <div class="card-body">
                    @Html.ActionLink("Regresar", "Index", null, new { htmlAttributes = new { @class="btn btn-primary btn-sm waves-effect waves-light pull-right" } })
                    <h3>Crear Rangos</h3>
                </div>
               @using (Html.BeginForm(null, null, FormMethod.Post, new { htmlAttributes = new { id = "frmCrearRangos" } }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.rang_Id, new { htmlAttributes = new { @value = 1 } })
                        <div class="form-group">
                            @Html.LabelFor(model => model.rang_Descripcion, new { htmlAttributes = new { @class = "control-label" } }) <br />
                            @Html.EditorFor(model => model.rang_Descripcion, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = true } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.rang_Estado, new { htmlAttributes = new { @class = "control-label" } }) <br />
                            @Html.EditorFor(model => model.rang_Estado, new { htmlAttributes = new { @type = "checkbox", @id="switch4", @switch="info", @checked = true } })
                            <label for="switch4" data-on-label="Si" data-off-label="No"></label>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Guardar", "Create", "Rangos", new { htmlAttributes = new { @class="btn btn-primary waves-effect waves-light" } })
                                @Html.ActionLink("Cancelar", "Index", null, new { htmlAttributes = new { @class="btn btn-danger waves-effect waves-light"} })
                            </div>
                        </div>
                  </div>
                }
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function(){
        //INICIALIZAR LA ESCUCHA DE VALIDACIONES DENTRO DEL FORMULARIO
        $('form').parsley();

        // INICIALIZAR EL PLUGIN DE SELECT2
        $(".select2").select2(
            {
                dropdownParent: $('#FormCrear'),
                placeholder: 'Seleccione un empleado',
                language: {
                    noResults: function () {
                        return 'Resultados no encontrados.';
                    },
                    searching: function () {
                        return 'Buscando...';
                    }
                }
            }
        );

        //INICIALIZAR EL ESTILO DE LOS BOTONES PARA LOS CAMPOS DE TIPO NUMBER
        $('.demo0').TouchSpin({
            buttondown_class: 'btn btn-primary',
            buttonup_class: 'btn btn-primary'
        });

        //INICIALIZAR EL DATEPICKER
        jQuery('.datepicker-autoclose').datepicker({
            autoclose: true,
            todayHighlight: true
        });
    });
</script>


